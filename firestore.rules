rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    // ─── Users: alleen eigen profiel ─────────────────────────────────────
    match /users/{uid} {
      allow read, write: if isSignedIn() && isOwner(uid);

      // Subcollection: card completions (dagelijkse kaarten)
      match /cardCompletions/{completionId} {
        allow read, write: if isSignedIn() && isOwner(uid);
      }
      // Subcollection: chatberichten
      match /chatMessages/{messageId} {
        allow read, write: if isSignedIn() && isOwner(uid);
      }
    }

    // ─── Leads: iedereen mag aanmaken, alleen admin leest (via backend) ───
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // ─── Content: alle ingelogde users lezen; schrijven alleen via admin ───
    match /content/dailyCards/{cardId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /content/knowledge/{itemId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /content/recipes/{recipeId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    match /content/exercises/{exerciseId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
  }
}
